            <Button Content="" HorizontalAlignment="Stretch" Margin="850,22.4,44,18.8" Grid.Row="5" VerticalAlignment="Center" Width="Auto" Height="70" Style="{StaticResource buttonStyleTrir}" RenderTransformOrigin="-4.526,0.443"/>
            <Button Content="" HorizontalAlignment="Left" Margin="406,22.4,0,18.8" Grid.Row="5" VerticalAlignment="Center" Width="50" Height="70" Style="{StaticResource buttonStyleTril}"/>
            <Label x:Name="sensibility" Content="1" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="638,21.4,0,18.8" FontSize="45" Foreground="White" Width="50" Height="71"/>

        </Grid>
        <Image x:Name="cursor" Width="100" Stretch="Fill" Margin="419,263,425,367.8"  >
            <Image.Source>
                <BitmapImage UriSource="hand.png"/>
            </Image.Source>
        </Image>
    </Grid>
</Window>
