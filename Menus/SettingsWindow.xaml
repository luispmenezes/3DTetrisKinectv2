            <Button Content="" HorizontalAlignment="Left" Margin="406,26,0,20.8" Grid.Row="3" VerticalAlignment="Center" Width="50" Height="70" Style="{StaticResource buttonStyleTril}"/>
            <Label x:Name="color"  Content="Scheme 1" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="568,26,0,20.8" FontSize="45" Foreground="White" Width="205" Height="70"/>


