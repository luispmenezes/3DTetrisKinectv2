            </Grid.RowDefinitions>
            <Label Content="Options" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="339,4,339,4.4" FontSize="70" FontWeight="Bold" Foreground="White" FontStyle="Italic" Height="102" Width="266"/>
