            <Button Content="Back" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="406,48.2,416,24.8" Width="122" Height="119" FontSize="45" Foreground="White" Style="{StaticResource buttonStyle}" />

            <Button Content="" HorizontalAlignment="Stretch" Margin="850,9.6,44,10" Grid.Row="1" VerticalAlignment="Center" Width="Auto" Height="70" Style="{StaticResource buttonStyleTrir}"/>
            <Button Content="" HorizontalAlignment="Left" Margin="406,9.6,0,10" Grid.Row="1" VerticalAlignment="Center" Width="50" Height="70" Style="{StaticResource buttonStyleTril}"/>
            <Label x:Name="difficulty"   Content="Easy" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="605,9.6,0,10" FontSize="45" Foreground="White" Width="135" Height="70"/>


